<%- include("partials/header.ejs") %>

    <main>
        <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center">
            <div class="col-md-5 p-lg-5 mx-auto my-0" id="spaceHome">

                <div class="desc">
                    <h1 class="display-4 fw-normal">Word App</h1>
                    <p class="lead fw-normal" id="lead">Struggling with a word?<br> Find related words, rhymes, synonyms, and antonyms</p>
                </div>

                <form action="/result" method="post">
                    <input type="text" name="word" class="form-control" id="word" autofocus autocomplete="off" placeholder="Describe it, we'll take it from there." required>
                    
                    <select name="filter" class="form-control" required>
                        <option selected disabled>Filter your search</option>
                        <option value="related-words">Related words</option>
                        <option value="rhymes">Rhymes</option>
                        <option value="synonyms">Synonyms</option>
                        <option value="antonyms">Antonyms</option>
                    </select>
                    <button class="btn btn-outline-secondary" id="fetchButton">Fetch</button>
                </form>

            </div>

            
           
        </div>

    </main>

    <script src="/js.index.hthml"></script>

<%- include("partials/footer.ejs") %>