<%- include("partials/header.ejs") %>

    <main>
        <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center">
            <div class="col-md-7 p-lg-5 mx-auto my-0" id="spaceResult">
                
                <div class="desc">
                    <a href="/"><span class="fa fa-chevron-circle-left" style="position:absolute; left: 10%; font-size: 2em; text-decoration: none; color: black;"></span></a>
                    
                    <h1><span class="iconify" data-icon="ri:file-word-2-fill"></span>Word App</h1><br>
                    <p class="lead fw-normal" id="lead">Struggling with a word?<br> Find related words, rhymes, synonyms, and antonyms</p>
                </div>

                <form action="/result" method="post">
                    <input type="text" name="word" class="form-control" id="word" autofocus autocomplete="off" placeholder="Describe it, we'll take it from there." required>
                    
                    <select name="filter" class="form-control" required>
                        <option selected disabled>Click here to filter your search</option>
                        <option value="related-words">Related words</option>
                        <option value="rhymes">Rhymes</option>
                        <option value="synonyms">Synonyms</option>
                        <option value="antonyms">Antonyms</option>
                    </select>
                    <button class="btn btn-outline-secondary" id="fetchButton" href="#">Fetch</button>
                </form>

            </div>
            

            <%# When the page loads %>
            <%if (item.length == 0 && enteredWord == "") {%>
                <button disabled style="display: none;">Debug</button>
            <%}%>

            <%# Displays message when user enters a invalid word, or API returns an empty array for not understanding the user entry %>
            <%if (item.length == 0 && enteredWord !== "") {%>
                <button class="btn btn-outline-secondary" disabled id="result" href="#">Match not found</button>
            <%}%>
            
            <%# Display query result so long query is valid and understood by the API  %>
            <%if (item.length > 0) {%>
                <h2 id="queryPlacard">Top <code><%= query %></code> found for <code>"<%=  enteredWord %>"</code></h2>
                <h6 id="guidePC"> 👇🏼 Click on a word to see the definition 👇🏼 </h6>
                <h6 id="guideMobile"> 👇🏼 Tap word to see definition 👇🏼 </h6>
                <% item.map((data, index) => { %>

                    <%if (index <= 60) {%>
                        
                        <button class="btn btn-outline-secondary button" id="result" data-bs-toggle="popover" data-bs-placement="top"  data-bs-trigger="focus" data-bs-html="true"
                        data-bs-content="<%=data.defs %>" tabindex="0">
                        <%= data.word %>
                        </button>

                        

                    <%}%>
                <% }) %>
            <%}%>


            
           
        </div>

    </main>

    <script src="/js.index.hthml"></script>

<%- include("partials/footer.ejs") %>