<%- include("partials/header.ejs") %>

    <div class="container" style="position: relative;">        

        <div class="row justify-content-center" style="margin-top: 5%;">

            <div class="col-md-12">
                <div class="card o-hidden borderr-1 shadow-lg my-2" id="one" style="padding: 2%;">
                    <div class="card-body p-0">
                        
                        <table class="table table-bordered table-hover table-striped">
            
                            <thead>
                                <tr>
                                    <th colspan="3"> <%= docs.length %> Queries </th>
                                </tr>
                                <tr>
                                    <th>S/N</th>
                                    <th>Query</th>
                                    <th>Filter</th>
                                    <th>Timestamp</th>
                                </tr>
                            </thead>
                
                            <tbody>
                
                                <%docs.map((items, index) => {%>
                                    
                                    <tr>
                                        <td><%= index+1 %></td>
                                        <td><%= items.query %></td>
                                        <td><%= items.filter %></td>
                                        <td><%= items.updated %></td>
                                    </tr>
                                    
                                <%})%>
                
                            </tbody>
                
                        </table>

                    </div>
                </div>
            </div>

            

        </div>

        
    </div>

<%- include("partials/footer.ejs") %>
    